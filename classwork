    <script>
        /**
         * Toggles the visibility and smooth-slide animation of a content section.
         */
        function toggleSection(contentId, arrowId) {
            const content = document.getElementById(contentId);
            const arrow = document.getElementById(arrowId);
            const titleBar = arrow.closest('.section-title-bar');

            if (content.classList.contains('open')) {
                // Collapse the section
                content.classList.remove('open');
                arrow.classList.remove('rotated');
                titleBar.classList.remove('active');
            } else {
                // Expand the section
                // First, ensure all other sections are closed (Accordion behavior)
                document.querySelectorAll('.collapsible-content.open').forEach(openContent => {
                    if (openContent.id !== contentId) {
                        openContent.classList.remove('open');
                        const otherArrow = document.getElementById(openContent.id.replace('-content', '-arrow'));
                        if (otherArrow) otherArrow.classList.remove('rotated');
                        const otherTitleBar = openContent.previousElementSibling;
                        if (otherTitleBar && otherTitleBar.classList.contains('section-title-bar')) otherTitleBar.classList.remove('active');
                    }
                });


                // Expand the target section
                content.classList.add('open');
                arrow.classList.add('rotated');
                titleBar.classList.add('active');
            }
        }
    </script>
